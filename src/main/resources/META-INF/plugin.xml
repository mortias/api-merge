<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>

    <!-- Unique id for this plugin. Must stay constant for the life of the plugin. -->
    <id>com.mitc.intellij.openapi.utils</id>

    <!-- Text to display as name on Preferences/Settings | Plugin page -->
    <name>OpenApi Utils</name>

    <vendor>MITC</vendor>

    <depends>com.intellij.modules.platform</depends>

    <!-- Declare the default resource location for localizing menu strings -->
    <resource-bundle>messages.BasicActionsBundle</resource-bundle>

    <actions>

        <action id="com.mitc.intellij.openapi.utils.action.MergeActionYaml" class="com.mitc.intellij.openapi.utils.action.MergeActionYaml"
                text="Merge API" icon="AllIcons.Diff.ApplyNotConflicts">
            <add-to-group group-id="CutCopyPasteGroup" anchor="last"/>
        </action>
        <action id="com.mitc.intellij.openapi.utils.action.FlipActionYaml" class="com.mitc.intellij.openapi.utils.action.FlipActionYaml"
                text="Flip to JSON" icon="AllIcons.Actions.BuildLoadChanges">
            <add-to-group group-id="CutCopyPasteGroup" anchor="last"/>
        </action>

        <action id="com.mitc.intellij.openapi.utils.action.MergeActionJson" class="com.mitc.intellij.openapi.utils.action.MergeActionJson"
                text="Merge API" icon="AllIcons.Diff.ApplyNotConflicts">
            <add-to-group group-id="CutCopyPasteGroup" anchor="last"/>
        </action>
        <action id="com.mitc.intellij.openapi.utils.action.FlipActionJson" class="com.mitc.intellij.openapi.utils.action.FlipActionJson"
                text="Flip to YAML" icon="AllIcons.Actions.BuildLoadChanges">
            <add-to-group group-id="CutCopyPasteGroup" anchor="last"/>
        </action>

    </actions>

</idea-plugin>
